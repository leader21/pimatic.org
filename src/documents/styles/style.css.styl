/* Customize container */
@media (min-width: 768px) {
  .layout-default .container, .layout-guide .container, .layout-page .container {
    max-width: 730px;
  }
  .navbar .container {
    max-width: 730px;
  }
}

@media screen and (min-width: 768px)  {
  .jumbotron {
    padding-top: 24px;
    padding-bottom: 28px;
  }
}

@media (max-width: 767px) {
  .navbar-nav .dropdown-header {  
    color: black;
  }
}

.container {
  position: relative;
}

.scroll-nav {
  position: absolute;
  left: -220px;
}
.scroll-nav.fixed .scroll-nav__wrapper {
  position: fixed;
  top: 60px;
}

.scroll-nav__wrapper {
  border-radius: 6px;
  width: 220px;
}

.scroll-nav__list {
  list-style-type: none;
  list-style-position:outside;
  margin-bottom: 0;
  padding-left: 0;
}

.scroll-nav__item.active {
  font-weight: 800;
}
.scroll-nav__item.active a:hover {
  font-weight: 800;
}

.scroll-nav__link {
  display: block;
}

.navbar {
  background-image: none;
}

.plugin-list {
  .meta {
    margin-top: -9px;
    color: gray;
    a {
      color: #3D3D3D;
    }
  }
}

.plugin-lists > div:nth-child(odd) {
  background-color: #f9f9f9;
}

@media screen and (min-width: 65em) {

  .scroll-nav__wrapper {
    padding: 15px 10px;
  }
  .scroll-nav__item {
    overflow: visible;
    width: 170px;
  }

}